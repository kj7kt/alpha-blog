<h1 class="text-center mt-4">Categories</h1>

<div class="container listing-container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="container">
          <div class="card text-center shadow-sm mb-5 bg-light rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
            </div>
            <div class="card-footer text-muted">
              <small>
                <%= "created at #{time_ago_in_words(category.created_at)} ago." %>
                <%= category.created_at == category.updated_at ? "" : "edited at #{time_ago_in_words(category.updated_at)} ago." %>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= render 'layouts/pagination', obj: @categories %>
