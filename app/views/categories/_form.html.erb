<%= render "articles/shared/errors", obj: @category %>

<%= form_with(model: @category, class: 'shadow bg-info rounded my-3 px-3 py-5', local: true) do |f| %>
  <div class="container">
    <form>

      <div class="row mb-3">
        <%= f.label :name, 'New category name', class: 'col-2 col-form-label text-light' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control shadow-sm rounded', placeholder: 'Enter a name' %>
        </div>
      </div>

      <div class="row justify-content-center">
        <%= f.submit class: 'col-2 mt-3 btn btn-outline-light btn-lg' %>
      </div>

    </form>
  </div>
<% end %>