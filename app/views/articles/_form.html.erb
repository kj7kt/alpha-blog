<div class="row justify-content-center">
  <div class="col-10">
    <%= render "articles/shared/errors", obj: @article %>
    <%= form_with(model: @article, class: 'shadow bg-info rounded my-3 px-3 py-5', local: true) do |f| %>

      <div class="container">
        <form>
          <div class="row mb-3">
            <%= f.label :title, class: 'col-2 col-form-label text-light' %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: 'form-control shadow-sm rounded', placeholder: 'Title of article' %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :description, class: 'col-2 col-form-label text-light' %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 10, class: 'form-control shadow-sm rounded', placeholder: 'Description of article' %>
            </div>
          </div>

          <div class="row justify-content-center">
            <%= f.submit class: 'col-2 mt-3 btn btn-outline-light btn-lg' %>
          </div>
        </form>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to '[ Go back ]', articles_path, class: 'text-info'%>
  </div>
</div>