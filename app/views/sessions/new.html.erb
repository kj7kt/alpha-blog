<h1 class="text-center mt-4">Log in</h1>

<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(scope: :session, url: login_path, class: 'shadow bg-info rounded my-3 px-3 py-5', local: true) do |f| %>

      <div class="container">
        <form>
          <div class="row mb-3">
            <%= f.label :email, class: 'col-2 col-form-label text-light' %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: 'form-control shadow-sm rounded', placeholder: 'Enter your email address' %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :password, class: 'col-2 col-form-label text-light' %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control shadow-sm rounded', placeholder: 'Enter your password' %>
            </div>
          </div>

          <div class="row justify-content-center">
            <%= f.submit 'Log in', class: 'col-2 mt-3 btn btn-outline-light btn-lg' %>
          </div>
        </form>
      </div>
    <% end %>
  </div>
  <div class="text-center mb-3">
    <%= link_to '[ Go back ]', articles_path, class: 'text-info'%>
  </div>
</div>
